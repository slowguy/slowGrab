<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bnb.grab.ui.activity.DocDetailActivity">

    <com.bnb.grab.widget.CustomHeaderLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:h_back_show="true"
        app:h_desc_text="WebDetail"
        app:h_tx_color="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frag_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/s_detail_view"
            android:gravity="center"
            android:text="view"
            android:textColor="@drawable/s_detail_text_color"/>

        <TextView
            android:id="@+id/codeText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/s_detail_code"
            android:gravity="center"
            android:text="code"
            android:textColor="@drawable/s_detail_text_color"/>

    </LinearLayout>

</LinearLayout>
